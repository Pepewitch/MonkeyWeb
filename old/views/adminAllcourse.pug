extends htmlTemplate
block head
    - var pageTitle = "All Course"
    - if(webUser.position==="tutor")pageTitle="My Course"
    style.
        table {
            width: 100%;
        }
        thead, tbody, tr, td, th { display: block; }
        tr:after {
            content: ' ';
            display: block;
            visibility: hidden;
            clear: both;
        }
        thead th {
            height: 30px;

            /*text-align: left;*/
        }
        tbody {
            height: 78vh;
            overflow-y: auto;
        }
        thead {
            /* fallback */
        }
        tbody td, thead th {
            width: 20%;
            float: left;
        }
block script
    script(src="js/adminAllCourse.js")
block body
    .container-fluid
        .row
            div(class=webUser.position === "tutor" ? "hidden" : "col-sm-3 col-lg-2")
                h1(style="margin-top:10px") Course
                form
                    .form-group
                        label
                            span.oi.oi-grid-two-up &nbsp;
                            |Quarter
                        select.form-control#quarter(onChange="quarterChange()")
                form
                    .form-group
                        label
                            span.oi.oi-sort-ascending &nbsp;
                            |Filter
                        select.form-control#subject(onChange="getAllCourseContent()")
                            option(value="all") All Subject
                            option(value="M") Math
                            option(value="PH") Physics
                            option(value="E") English
                            option(value="CH") Chemistry
                form
                    .form-group
                        select.form-control#grade(onChange="getAllCourseContent()" style="margin-bottom:5px")
                            option(value="all") All grade
                            option(value="1") P1
                            option(value="2") P2
                            option(value="3") P3
                            option(value="4") P4
                            option(value="5") P5
                            option(value="6") P6
                            option(value="7") S1
                            option(value="8") S2
                            option(value="9") S3
                            option(value="10") S4
                            option(value="11") S5
                            option(value="12") S6
                form
                    .form-group
                        select.form-control#name(onChange="getAllCourseContent()" style="margin-bottom:5px")
                            if(webUser.position === "tutor")
                                option(value=webUser.userID)
                            else
                                option(value="all") All Tutor
                                option(value="99019") Anne
                                option(value="99018") Atom
                                option(value="99007") Bam
                                option(value="99003") BB
                                option(value="99025") Beng
                                option(value="99012") Chote
                                option(value="99006") Gag
                                option(value="99000") Hybrid
                                option(value="99010") Paan
                                option(value="99022") Pele
                                option(value="99004") Pre
                                option(value="99023") Tao
                                option(value="99008") Ten
                                option(value="99026") Third
                                option(value="99016") Ya
                form
                    .form-group
                        select.form-control#time(onChange="getAllCourseContent()" style="margin-bottom:5px")
                            option(value="all") All Time
                            option(value="176400000") Sat 8
                            option(value="183600000") Sat 10
                            option(value="194400000") Sat 13
                            option(value="201600000") Sat 15
                            option(value="262800000") Sun 8
                            option(value="270000000") Sun 10
                            option(value="280800000") Sun 13
                            option(value="288000000") Sun 15
                a(href="adminCourseTable" class=webUser.position === "tutor" ? "hidden" : "") คัมภีร์เทวดา
            div(style="padding:0" class=webUser.position === "tutor" ? "col-sm-12" : "col-sm-9 col-lg-10")
                .table-responsive
                    table.table.table-hover(style="font-family:'Trirong',serif")
                        thead
                            tr
                                th No.
                                th CourseName
                                th Day
                                th Time
                                th Tutor
                        tbody#allCourseTable
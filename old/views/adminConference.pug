extends htmlTemplate
block head
    -const pageTitle = "Conference list"
    link(href="css/component.css", rel="stylesheet")
    script(src="js/adminConference.js")
block body
    .container
        .col-sm-12
            h1 List Conference
        .col-sm-12
            form.col-sm-2
                .form-group
                    label Filter:
                    select.form-control#filter(style="margin-bottom: 5px")
                        option(value="all") All
                        option(value="accept") Accept
                        option(value="reject") Reject
            form.col-sm-2
                .form-group
                    label Sort:
                    select.form-control#sortby(style="margin-bottom: 5px")
                        option(value="time") By time
                        option(value="grade") By grade
                        
        .col-sm-12.table-responsive
            table.table.table-hover
                thead
                    tr
                        th.col-sm-1.col-xs-1 #
                        th.col-sm-3.col-xs-3 Name
                        th.col-sm-1.col-xs-1 Grade
                        th.col-sm-1.col-xs-1 Co.Name
                        th.col-sm-1.col-xs-1 Day
                        th.col-sm-1.col-xs-1 Time
                        th.col-sm-1.col-xs-1 Decision
                        th.col-sm-3.col-xs-3 Reason
                tbody#tablebody
                
extends htmlTemplate
block head
    -const pageTitle = "Summer Absent Form"
    script(src="js/summerAbsentForm.min.js")
block body
    mixin tablebody(startDay,type)
        tr
            th.text-center= "Mon "+startDay
            th.text-center= "Tue "+(startDay+1)
            th.text-center= "Wed "+(startDay+2)
            th.text-center= "Thu "+(startDay+3)
            th.text-center= "Fri "+(startDay+4)
        tr
            +tabletd(startDay,type)
            +tabletd(startDay+1,type)
            +tabletd(startDay+2,type)
            +tabletd(startDay+3,type)
            +tabletd(startDay+4,type)
    mixin tabletd(day,type)
        td
            +butt(day,type)
    mixin butt(day,type)
        if(day<10)
            button.disabled.btn.btn-default.col-sm-4.col-xs-12(type="button" id=type+"0"+day+"-08") 8
            button.disabled.btn.btn-default.col-sm-4.col-xs-12(type="button" id=type+"0"+day+"-10") 10
            button.disabled.btn.btn-default.col-sm-4.col-xs-12(type="button" id=type+"0"+day+"-13") 13
        else
            button.disabled.btn.btn-default.col-sm-4.col-xs-12(type="button" id=type+day+"-08") 8
            button.disabled.btn.btn-default.col-sm-4.col-xs-12(type="button" id=type+day+"-10") 10
            button.disabled.btn.btn-default.col-sm-4.col-xs-12(type="button" id=type+day+"-13") 13
    .container

extends htmlTemplate
block head
    -const pageTitle = "All Student"
    style.
        table {
            width: 100%;
        }
        thead, tbody, tr, td, th { display: block; }
        tr:after {
            content: ' ';
            display: block;
            visibility: hidden;
            clear: both;
        }
        thead th {
            height: 30px;

            /*text-align: left;*/
        }
        tbody {
            height: 78vh;
            overflow-y: auto;
        }
        thead {
            /* fallback */
        }
        tbody td, thead th {
            width: 11.1%;
            float: left;
        }
block script
    script(src="js/bootstrap3-typeahead.min.js")
    script(src="js/adminAllstudent.min.js")
block body
    .container-fluid
        .row
            .col-sm-3.col-lg-2
                h1(style="margin-top:10px") Student
                form
                    .form-group
                        label
                            span.oi.oi-grid-two-up &nbsp;
                            |Quarter
                        select.form-control#quarter(onChange="quarterChange()")
                form
                    .form-group
                        label
                            span.oi.oi-sort-ascending &nbsp;
                            |Filter
                        select.form-control#status(onChange="getAllStudentContent()" style="margin-bottom: 5px")
                            option(value="active") Active
                            option(value="inactive") Inactive
                            option(value="dropped") Drop
                            option(value="terminated") Terminate
                            option(value="all") All
                form
                    .form-group
                        select.form-control#stage(onChange="registrationStateChange()" style="margin-bottom: 5px")
                form
                    .form-group
                        select.form-control#grade(onChange="getAllStudentContent()" style="margin-bottom: 5px")
                            option(value="all") All Grade
                            option(value="1") P1
                            option(value="2") P2
                            option(value="3") P3
                            option(value="4") P4
                            option(value="5") P5
                            option(value="6") P6
                            option(value="7") S1
                            option(value="8") S2
                            option(value="9") S3
                            option(value="10") S4
                            option(value="11") S5
                            option(value="12") S6
                form
                    .form-group
                        select.form-control#course(onChange="getAllStudentContent()" style="margin-bottom: 5px")
                            option(value="all" ) CR &amp; FHB
                            option(value="cr") CR
                            option(value="hb") FHB
                form
                    .form-group
                        label
                            span.oi.oi-magnifying-glass &nbsp;
                            |Find student
                        input.typeahead.form-control(type="text" data-provide='typeahead')
                form(onsubmit="scanStudentBarcode(); return false;")
                    .form-group
                        label Barcode:
                        input.form-control(type="number" id="studentID" autofocus)
                label#currentStudentLabel 
                button.btn.btn-default.col-sm-12(onClick="createNewStudent()") Add Student
            .col-sm-9.col-lg-10(style="padding:0;")
                .table-responsive
                    table.table.table-hover(style="font-family:'maitree',serif;")
                        thead
                            tr
                                th No.
                                th ID
                                th Nickname
                                th Name
                                th Surname
                                th Grade
                                th Level
                                th CR
                                th HB
                        tbody#allStudentTable

                .modal.fade#newStudentDialog
                    .modal-dialog
                        .modal-content
                            .modal-header
                                h1 New Student
                            .modal-body
                                h4#newStudentUsername 
                                h4#newStudentPassword 
                            .modal-footer
                                button.btn.btn-default(onClick="closeNewStudentDialog()") Close
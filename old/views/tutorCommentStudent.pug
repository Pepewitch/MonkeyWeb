extends htmlTemplate
block head
    -const pageTitle = "Comments"
    link(href="css/component.css", rel="stylesheet")
    script(src="js/bootstrap3-typeahead.min.js")
    script(src="js/tutorCommentStudent.min.js")
    style.
        #commentList p{
            margin-bottom:20px;
            white-space:pre-line;
        }
block body
    .container
        .page-header
            h2 Comments
            p Add comments on students.
        #search-box
            input.typeahead(type="text" placeholder="Name of Student")
        br
        form
            .form-group
                label(for="comment") Comment:
                textarea.form-control#comment(rows="5")
        button#uploadButton.btn.btn-default.col-sm-1.col-sm-offset-10.col-xs-3.col-xs-offset-6 UPLOAD
        button#postButton.btn.btn-default.col-sm-1.col-xs-3 SUBMIT
    .container
        hr
        h2(style="margin-bottom:30px") Recent comments
        #commentList.row.col-sm-12.col-xs-12
        ul.pager(style='margin:0')
            li.previous: a(onClick="commFirst()"): span.glyphicon.glyphicon-fast-backward   First
            li.previous: a(onClick="commPosition(0)"): span.glyphicon.glyphicon-step-backward Previous
            li.next: a(onClick="commLast()") Last 
                span.glyphicon.glyphicon-fast-forward
            li.next: a(onClick="commPosition(1)") Next
                span.glyphicon.glyphicon-step-forward
    div.text-center(style='margin:0')
        ul.pagination(style='margin:0')
    //- Modal for uploadPic
    .container
        #uploadModal.modal.fade(role="dialog")
            .modal-dialog
                .modal-content
                    .modal-header
                        h4 Upload Picture
                    .modal-body.form-group
                        .box(align="center")
                            input#file-1.inputfile.inputfile-1(
                                type="file"
                                name="file-1[]"
                                style="opacity: 0;height: 0;"
                                data-multiple-caption="{count} files selected"
                            )
                            label(for="file-1")
                                svg(xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17")
                                    path(d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z")
                                span Add Picture
                    .modal-footer
                        button.btn.btn-success(type="button" data-dismiss="modal") SUBMIT
                        button.btn.btn-danger(type="button" data-dismiss="modal") CANCEL
    script(src="js/custom-file-input.js")
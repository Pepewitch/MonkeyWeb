extends htmlTemplate
block head
    -const pageTitle = "Student Profile"
    link(href="css/component.css", rel="stylesheet")
    script(src="js/student.min.js")
    script(src="js/studentProfile.min.js")
    style.
        .cr {
            background-color: #FFE4F5!important;
            border-color: transparent!important;
        }
        .hb {
            background-color: #FFF8BA!important;
            border-color: transparent!important;
        }
        .sk {
            background-color: #D4EEF8!important;
            border-color: transparent!important;
        }
block body
    .container
        .col-sm-6.visible-xs
            img(class="profilePic" src="images/noImage.svg" style="max-width: inherit;max-height: 20vh;width: auto;margin-bottom: 10px")
        .col-sm-6
            label.col-sm-2.col-xs-4 ID:
            p#id
            label.col-sm-2.col-xs-4 สถานะ:
            p#status
            label.col-sm-2.col-xs-4 ชื่อ:
            p#name
            p#nameE.col-sm-offset-2.col-xs-offset-4
            label.col-sm-2.col-xs-4 ชั้น:
            p#grade
            label.col-sm-2.col-xs-4 เบอร์โทร:
            p#parentTel
            p#studentTel.col-sm-offset-2.col-xs-offset-4
            label.col-sm-2.col-xs-4 E-mail:
            p#email
            p
                kbd Course Detail
            label.col-sm-2.col-xs-4 เริ่ม:
            p#startCr
            label.col-sm-2.col-xs-4 ปัจจุบัน:
            p#nowCr
            label.col-sm-2.col-xs-4 สิ้นสุด:
            p#endCr
            p
                kbd ตารางเรียน
        .col-sm-6.hidden-xs(align="right")
            img(class="profilePic" src="images/noImage.svg" style="max-width: inherit;max-height: 25vh;width: auto;margin-bottom: 10px")
        .table-responsive.col-sm-12.hidden-xs
            table.table.table-bordered
                thead
                    tr
                        th
                        th.text-center 8:00-10:00
                        th.text-center 10:00-12:00
                        th.text-center 13:00-15:00
                        th.text-center 15:00-17:00
                        th.text-center 17:00-19:00
                tbody
                    tr
                        td.text-center TUE
                        td
                        td
                        td
                        td
                        td
                            button.col-sm-12(class="btn-tue 17.1 btn btn-default disabled" type="button" onClick="this.blur()") -
                    tr
                        td.text-center THU
                        td
                        td
                        td
                        td
                        td
                            button.col-sm-12(class="btn-thu 17.1 btn btn-default disabled" type="button" onClick="this.blur()") -
                    tr
                        td.text-center SAT
                        td
                            button.col-sm-12(class="btn-sat 8.1 btn btn-default disabled" type="button" onClick="this.blur()") -
                        td
                            button.col-sm-12(class="btn-sat 10.1 btn btn-default disabled" type="button" onClick="this.blur()") -
                        td
                            button.col-sm-12(class="btn-sat 13.1 btn btn-default disabled" type="button" onClick="this.blur()") -
                        td
                            button.col-sm-12(class="btn-sat 15.1 btn btn-default disabled" type="button" onClick="this.blur()") -
                        td
                    tr
                        td.text-center SUN
                        td
                            button.col-sm-12(class="btn-sun 8.1 btn btn-default disabled" type="button" onClick="this.blur()") -
                        td
                            button.col-sm-12(class="btn-sun 10.1 btn btn-default disabled" type="button" onClick="this.blur()") -
                        td
                            button.col-sm-12(class="btn-sun 13.1 btn btn-default disabled" type="button" onClick="this.blur()") -
                        td
                            button.col-sm-12(class="btn-sun 15.1 btn btn-default disabled" type="button" onClick="this.blur()") -
                        td
        .table-responsive.col-sm-12.visible-xs
            table.table.table-bordered
                thead
                    tr
                        th
                        th.text-center TUE
                        th.text-center THU
                tbody
                    tr
                        td.text-center 17-19
                        td
                            button(class="btn-tue 17.1 btn btn-default disabled col-xs-12" style="width:30vw" type="button" onClick="this.blur()")
                        td
                            button(class="btn-thu 17.1 btn btn-default disabled col-xs-12" style="width:30vw" type="button" onClick="this.blur()")
        .table-responsive.col-sm-12.visible-xs
            table.table.table-bordered
                thead
                    tr
                        th
                        th.text-center SAT
                        th.text-center SUN
                tbody
                    tr
                        td.text-center 8-10
                        td
                            button(class="btn-sat 8.1 btn btn-default disabled col-xs-12" style="width:30vw" type="button" onClick="this.blur()")
                        td
                            button(class="btn-sun 8.1 btn btn-default disabled col-xs-12" style="width:30vw" type="button" onClick="this.blur()")
                    tr
                        td.text-center 10-12
                        td
                            button(class="btn-sat 10.1 btn btn-default disabled col-xs-12" style="width:30vw" type="button" onClick="this.blur()")

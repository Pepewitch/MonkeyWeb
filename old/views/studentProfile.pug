extends htmlTemplate
mixin tdButt(className)
    td: button.col-12.selector.btn.btn-light(class=className) &nbsp;
block head
    -const pageTitle = "Student Profile"
    link(href="css/component.css", rel="stylesheet")
    style.
        .cr {
            background-color: #FFE4F5!important;
            border-color: transparent!important;
        }
        .hb {
            background-color: #FFF8BA!important;
            border-color: transparent!important;
        }
        .sk {
            background-color: #D4EEF8!important;
            border-color: transparent!important;
        }
block script
    script(src="js/custom-file-input.js")
    script(src="js/constRegisQuarter.js")
    script(src="js/studentProfile.min.js")
block body
    .container-fluid
        .row
            .col-12.col-md-3
                form
                    .form-group
                        label
                            span.fa.fa-lg.fa-th-large &nbsp;
                            |Quarter
                        select.form-control#quarterSelect
        .row
            .col-4
                img.img-fluid.img-thumbnail#profileImg(src="images/noImage.svg")
            .col-8
                #studentProfileContent
        .row
            .col-12.collapse#mainTable
                .table-responsive
                    table.table.table-bordered
                        thead.thead-dark
                            tr
                                th &nbsp;
                                th.text-center TUE
                                th.text-center THU
                        tbody
                            tr
                                td.text-center 17-19
                                +tdButt("btn2-17")
                                +tdButt("btn4-17")
                .table-responsive
                    table.table.table-bordered
                        thead.thead-dark
                            tr
                                th &nbsp;
                                th.text-center SAT
                                th.text-center SUN
                        tbody
                            tr
                                td.text-center 8-10
                                +tdButt("btn6-8")
                                +tdButt("btn0-8")
                            tr
                                td.text-center 10-12
                                +tdButt("btn6-10")
                                +tdButt("btn0-10")
                            tr
                                td.text-center 13-15
                                +tdButt("btn6-13")
                                +tdButt("btn0-13")
                            tr
                                td.text-center 15-17
                                +tdButt("btn6-15")
                                +tdButt("btn0-15")
            .col-12.collapse#summerTable
                .table-responsive
                    table.table.table-bordered
                        thead.thead-dark
                            tr
                                th &nbsp;
                                th.text-center CR
                        tbody
                            tr
                                td.text-center 8-10
                                +tdButt("btn1-8")
                            tr
                                td.text-center 10-12
                                +tdButt("btn1-10")
                            tr
                                td.text-center 13-15
                                +tdButt("btn1-13")
        //- Modal for Upload Pic
        #uploadPicModal.modal.fade
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title Upload
                        button.close(type="button" data-dismiss="modal") &times;
                    .modal-body
                        .box(align="center")
                            input#file-img.inputfile.inputfile-1(
                                type="file"
                                name="file-img[]"
                                style="opacity: 0;height: 0;"
                            )
                            label(for="file-img")
                                svg(xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17")
                                    path(d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z")
                                span เลือกรูป
                    .modal-footer
                        button.btn.btn-success#uploadPicButt(type="button") Upload
                        button.btn.btn-danger(type="button" data-dismiss="modal") Cancel
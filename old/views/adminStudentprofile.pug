        .row
            .col-sm-6
                .row
                    .col-sm-3
                        h1 Summer
                        button.btn.btn-default#summer(data-toggle='collapse' data-target='#summerDiv') Download Summer Table 
                            span.caret
                    .col-sm-3
                        select.form-control#summerQuarter(style="margin-top: 25px" onChange="quarterChange()")
                    .col-sm-6
                    .collapse#summerDiv
                        canvas#summerCanvas(style="border:1px solid black" width="621" height="440" onClick="downloadCanvas('summer');")
                .row
                    .table-responsive.col-sm-8
                        br
                        table.table.table-bordered#courseTable
                            thead
                                tr
                                    th.text-center 8-10
                                    td: button.btn.btn-default.col-sm-12#-255600000(type="button" onClick="addRemoveCourse(this.id);") Add Course
                                tr
                                    th.text-center 10-12
